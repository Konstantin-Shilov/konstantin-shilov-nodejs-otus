.newsletter
    .newsletter_background.parallax-window(data-parallax='scroll', data-image-src='/images/newsletter.jpg', data-speed='0.8')
    .container
        .row
            .col
                .newsletter_container.d-flex.flex-lg-row.flex-column.align-items-center.justify-content-start
                    // Newsletter Content
                    .newsletter_content.text-lg-left.text-center
                        .newsletter_title sign up for news and offers
                        .newsletter_subtitle Subcribe to lastest smartphones news & great deals we offer
                    // Newsletter Form
                    .newsletter_form_container.ml-lg-auto
                        form#newsletter_form.newsletter_form.d-flex.flex-row.align-items-center.justify-content-center(action='#')
                            input.newsletter_input(type='email', placeholder='Your Email', required='required')
                            button.newsletter_button(type='submit') subscribe
